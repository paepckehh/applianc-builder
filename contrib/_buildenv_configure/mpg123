#!/bin/sh
# autogenerated by BSDPKG configure defaults - please modify/adapt!
case $TARCH_L2 in
amd64) opt="x86-64" ;;
arm) opt="arm_fpu" ;;
aarch64) opt="aarch64" ;;

esac
autoreconf -iv
sh ./configure \
	--build=$LT_ARCH \
	--host=$CCT \
	--target=$CCT \
	--prefix=/usr \
	--disable-debug \
	--disable-tests \
	--disable-locale \
	--disable-debug \
	--disable-man \
	--disable-manpages \
	--disable-doc \
	--disable-maintainer-mode \
	--enable-shared \
	--with-audio=oss \
	--with-optimization=3 \
	--with-cpu=$opt \
	cross_compiling=yes
# --with-audio=oss,sndio \
# --enable-ipv6=no \
