#!/bin/sh
case $TARCH_L1 in
	arm)
		case $TARCH_L2 in
			armv6)
			export BSD_KERNCONF_OPTIONS="$BSD_KERNCONF_OPTIONS USB_HOST_ALIGN=32"
				;;
			armv7)
			export BSD_KERNCONF_OPTIONS="$BSD_KERNCONF_OPTIONS USB_HOST_ALIGN=64"
				;;
		esac 
		;;
	arm64)
		export BSD_KERNCONF_OPTIONS="$BSD_KERNCONF_OPTIONS USB_HOST_ALIGN=64"
		;;
esac
export BSD_KERNCONF_DEVICE="$BSD_KERNCONF_DEVICE usb $BSD_KERNCONF_DEVICE_USB_CONTROLLER" 
