#!/bin/sh
export BSD_TARGET_SBC=rpi4b64
export BSD_TARGET_SBC_ALIAS_LIST="rpi4 rpi4b rpi400 rpi4cm"
. $BSD_SOC/bcm2711
. $BSD_VENDOR/rpi
export BSD_VENDOR_BOOT="rpi/rpi4"
export BSD_KERNCONF_DEVICE="$BSD_KERNCONF_DEVICE syscon pci"
export BSD_KERNCONF_DEVICE_NIC="$BSD_KERNCONF_DEVICE_NIC genet mii"
export NIC_PRIMARY="ue0"
export BSD_KERNCONF_DEVICE_SND="$BSD_KERNCONF_DEVICE_SND"
export BSD_KERNCONF_DEVICE_USB_CONTROLLER="$BSD_KERNCONF_DEVICE_USB_CONTROLLER xhci" 
