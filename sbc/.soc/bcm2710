#!/bin/sh
. $BSD_ARCH/arm64.aarch64.cortex-a53
export BSD_TARGET_SOC=bcm2710
export BSD_KERNCONF_OPTIONS="$BSD_KERNCONF_OPTIONS SOC_BRCM_BCM2837"
export BSD_KERNCONF_OPTIONS="$BSD_KERNCONF_OPTIONS SOC_BRCM_BCM2838 NEW_PCIB"
# export BSD_KERNCONF_NOOPTIONS="$BSD_KERNCONF_NOOPTIONS armv8crypto"
export CPUOPT="+crc"
export CCO="-Ofast -mcpu=$TARCH_L3$CPUOPT"
export CFLAGS=$CCO
